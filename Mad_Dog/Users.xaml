<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mad_Dog.Users">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <ListView x:Name="LV" HasUnevenRows="true" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Username}" TextColor="Black" FontAttributes="Bold"/>
                                <Label Text="{Binding Email}" TextColor="Black" FontAttributes="Bold"/>
                                <Label Text="{Binding Cell}" TextColor="Black" FontAttributes="Bold"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>